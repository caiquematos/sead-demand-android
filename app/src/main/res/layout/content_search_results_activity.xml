<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sead.demand.Activities.SearchResultsActivity"
    tools:showIn="@layout/activity_search_results_activity">

    <TextView
        android:id="@+id/search_subject_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_subject_topic"
        android:padding="6dp"
        android:textColor="@color/accent"
        android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_subject_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/search_description_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_description_topic"
        android:padding="6dp"
        android:textColor="@color/accent"
        android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_description_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/search_receiver_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/receiver"
        android:padding="6dp"
        android:textColor="@color/accent"
        android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_receiver_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/search_sender_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sender"
        android:padding="6dp"
        android:textColor="@color/accent"
        android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_sender_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
