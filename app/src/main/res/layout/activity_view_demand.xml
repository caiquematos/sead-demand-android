<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.sead.demand.Activities.ViewDemandActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_view_demand" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:gravity="end|center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_behavior="com.ajaysinghdewari.floatingactionbuttonmenu.activities.utils.MoveUpwardBehavior"
            android:paddingBottom="@dimen/layout_fab_padding_item_bottom"
            android:paddingEnd="@dimen/layout_fab_padding_item_end"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/accept_button"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:shadowColor="@color/secondary_text"
                android:textSize="@dimen/menu_text_size"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:elevation="4dp"
                android:visibility="gone" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/menu_text_size"
                android:src="@drawable/ic_thumb_up_black_24dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:backgroundTint="@color/green" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_behavior="com.ajaysinghdewari.floatingactionbuttonmenu.activities.utils.MoveUpwardBehavior"
            android:paddingBottom="@dimen/layout_fab_padding_item_bottom"
            android:paddingEnd="@dimen/layout_fab_padding_item_end"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_later"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="Lembrete"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:shadowColor="@color/secondary_text"
                android:textSize="@dimen/menu_text_size"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:elevation="4dp"
                android:visibility="gone" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_later"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/menu_text_size"
                android:src="@drawable/ic_timer_black_24dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:backgroundTint="@color/Gold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_behavior="com.ajaysinghdewari.floatingactionbuttonmenu.activities.utils.MoveUpwardBehavior"
            android:paddingBottom="@dimen/layout_fab_padding_item_bottom"
            android:paddingEnd="@dimen/layout_fab_padding_item_end"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="Prazo"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:shadowColor="@color/secondary_text"
                android:textSize="@dimen/menu_text_size"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:elevation="4dp"
                android:visibility="gone" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_text_size"
                android:src="@drawable/ic_alarm_add_black_24dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:backgroundTint="@color/DarkOrchid" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_fab_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_behavior="com.ajaysinghdewari.floatingactionbuttonmenu.activities.utils.MoveUpwardBehavior"
            android:paddingBottom="@dimen/layout_fab_padding_item_bottom"
            android:paddingEnd="@dimen/layout_fab_padding_item_end"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/cancel_button"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:shadowColor="@color/secondary_text"
                android:textSize="@dimen/menu_text_size"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:elevation="4dp"
                android:visibility="gone" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_behavior="com.ajaysinghdewari.floatingactionbuttonmenu.activities.utils.MoveUpwardBehavior"
                android:src="@drawable/ic_cancel_black_24dp"
                android:tint="@color/white"
                android:visibility="gone"
                android:layout_marginStart="@dimen/menu_text_size"
                app:backgroundTint="@color/red" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_fab_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_behavior="com.ajaysinghdewari.floatingactionbuttonmenu.activities.utils.MoveUpwardBehavior"
            android:paddingBottom="@dimen/layout_fab_padding_item_bottom"
            android:paddingEnd="@dimen/layout_fab_padding_item_end"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/reject_button"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:shadowColor="@color/secondary_text"
                android:textSize="@dimen/menu_text_size"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:elevation="4dp"
                android:visibility="gone" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_text_size"
                android:src="@drawable/ic_thumb_down_black_24dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:backgroundTint="@color/Red" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_fab_reopen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_behavior="com.ajaysinghdewari.floatingactionbuttonmenu.activities.utils.MoveUpwardBehavior"
            android:paddingBottom="@dimen/layout_fab_padding_item_bottom"
            android:paddingEnd="@dimen/layout_fab_padding_item_end"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_repopen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/reopen_button"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:shadowColor="@color/secondary_text"
                android:textSize="@dimen/menu_text_size"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:elevation="4dp"
                android:visibility="gone" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_reopen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_text_size"
                android:src="@drawable/ic_settings_backup_restore_black_24dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:backgroundTint="@color/Orange" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_fab_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_behavior="com.ajaysinghdewari.floatingactionbuttonmenu.activities.utils.MoveUpwardBehavior"
            android:paddingBottom="@dimen/layout_fab_padding_item_bottom"
            android:paddingEnd="@dimen/layout_fab_padding_item_end"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/resend_button"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:shadowColor="@color/secondary_text"
                android:textSize="@dimen/menu_text_size"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:elevation="4dp"
                android:visibility="gone" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_text_size"
                android:src="@drawable/ic_send_black_24dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:backgroundTint="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_fab_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/layout_fab_padding_item_bottom"
            android:paddingEnd="@dimen/layout_fab_padding_item_end"
            android:clipToPadding="false"
            app:layout_behavior="com.ajaysinghdewari.floatingactionbuttonmenu.activities.utils.MoveUpwardBehavior"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="Concluir"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:shadowColor="@color/secondary_text"
                android:textSize="@dimen/menu_text_size"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:elevation="4dp"
                android:visibility="gone" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_text_size"
                android:src="@drawable/ic_check_circle_black_24dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:backgroundTint="@color/ForestGreen" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_fab_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/layout_fab_padding_item_bottom"
            android:paddingEnd="@dimen/layout_fab_padding_item_end"
            android:clipToPadding="false"
            app:layout_behavior="com.ajaysinghdewari.floatingactionbuttonmenu.activities.utils.MoveUpwardBehavior"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="Finalizar"
                android:textSize="@dimen/menu_text_size"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:elevation="4dp"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:shadowColor="@color/secondary_text"
                android:visibility="gone" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_text_size"
                android:src="@drawable/ic_assignment_turned_in_white_24dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:backgroundTint="@color/dGreen" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_fab_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/layout_fab_padding_item_bottom"
            android:paddingEnd="@dimen/layout_fab_padding_item_end"
            android:clipToPadding="false"
            app:layout_behavior="com.ajaysinghdewari.floatingactionbuttonmenu.activities.utils.MoveUpwardBehavior"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:textSize="@dimen/menu_text_size"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:elevation="4dp"
                android:text="Repassar"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:shadowColor="@color/secondary_text"
                android:visibility="gone" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_swap_calls_white_24dp"
                android:tint="@color/white"
                app:fabSize="mini"
                android:layout_marginStart="@dimen/menu_text_size"
                android:visibility="gone"
                app:backgroundTint="@color/Brown" />

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_fab_padding"
            android:layout_marginRight="@dimen/layout_fab_padding"
            app:fabSize="normal"
            android:visibility="visible"
            android:src="@drawable/ic_add_black_24dp"
            app:backgroundTint="@color/accent"
            app:layout_behavior="com.ajaysinghdewari.floatingactionbuttonmenu.activities.utils.MoveUpwardBehavior"
            android:tint="@color/white" />

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
